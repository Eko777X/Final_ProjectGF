<!DOCTYPE html>
<html>
<head>
  <title>Roles</title>
</head>
<body>
  <h1>Roles</h1>
  <ul>
    <% roles.forEach(role => { %>
      <li><%= role.nama_role %></li>
    <% }) %>
  </ul>

  <form action="/roles" method="POST">
    <label for="nama_role">Role Name:</label>
    <input type="text" name="nama_role" required>
    <button type="submit">Create Role</button>
  </form>
</body>
</html>
