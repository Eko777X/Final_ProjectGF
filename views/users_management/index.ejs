<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Management</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center">User Management</h1>
    
    <!-- Form untuk menambah user baru -->
    <div class="mb-3">
      <a href="#createUserModal" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createUserModal">Create New User</a>
    </div>

    <!-- Modal untuk input user baru -->
    <div class="modal fade" id="createUserModal" tabindex="-1" aria-labelledby="createUserModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="createUserModalLabel">Create User</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form action="/user-management" method="POST">
            <div class="modal-body">
              <div class="mb-3">
                <label for="nama_user" class="form-label">Nama User</label>
                <input type="text" class="form-control" id="nama_user" name="nama_user" required>
              </div>
              <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" name="username" required>
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" required>
              </div>
              <div class="mb-3">
                <label for="id_role" class="form-label">Role</label>
                <select class="form-select" id="id_role" name="id_role" required>
                  <option value="">Select Role</option>
                  <!-- Loop through available roles -->
                  <% roles.forEach(role => { %>
                    <option value="<%= role.id_role %>"><%= role.nama_role %></option>
                  <% }); %>
                </select>
              </div>
              <div class="mb-3">
                <label for="id_user" class="form-label">User Created By</label>
                <input type="text" class="form-control" id="id_user" name="id_user" required>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Create User</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Tabel untuk menampilkan data users -->
    <table class="table table-bordered table-striped mt-4">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Nama User</th>
          <th>Username</th>
          <th>Email</th>
          <th>Status</th>
          <th>Role</th>
          <th>Created By</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (usersManagement && usersManagement.length > 0) { %>
          <% usersManagement.forEach((user, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= user.nama_user %></td>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td>
                <span class="<%= user.status === 'active' ? 'badge bg-success' : 'badge bg-secondary' %>">
                  <%= user.status %>
                </span>
              </td>
              <td><%= user.role_name || 'N/A' %></td>
              <td><%= user.created_by || 'N/A' %></td>
              <td>
                <a href="/user-management/edit/<%= user.id_user_manajemen %>" class="btn btn-warning btn-sm">Edit</a>
                <a href="/user-management/delete/<%= user.id_user_manajemen %>" class="btn btn-danger btn-sm">Delete</a>
              </td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="8" class="text-center">No data available</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
